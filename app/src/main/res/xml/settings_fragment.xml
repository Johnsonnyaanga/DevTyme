<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="About">

        <Preference
            app:icon="@drawable/ic_about"
            app:key="key_about"
            app:summary="App Version 1.0.0"
            app:title="About"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="key_github"
            app:summary="View DevTyme on GitHub"
            app:title="DevTyme on GitHub" />

        <Preference
            app:key="key_open_source"
            app:summary="3rd Party Libraries"
            app:title="Open Source Libraries" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Appearance">
        <ListPreference
            app:dialogTitle="Choose Theme"
            app:entries="@array/entries"
            app:entryValues="@array/entry_values"
            app:icon="@drawable/ic_theme"
            app:key="key_theme"
            app:title="Set Theme"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory>
        <EditTextPreference
            app:dialogTitle="Set Daily Goal"
            app:icon="@drawable/ic_goal"
            app:key="key_daily_goal"
            app:title="Set Daily Goal"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


</PreferenceScreen>